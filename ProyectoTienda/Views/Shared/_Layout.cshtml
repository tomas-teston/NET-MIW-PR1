<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/alertify.core.css")
    @Styles.Render("~/Content/alertify.default.css")
    @Styles.Render("~/Content/simple-sidebar.css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/card-menu.css")
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <script src="~/Scripts/alertify/alertify.js"></script>

</head>
<body>
    <div class="menu">
        <button class="burger burger3"><span></span></button>
        <div id="menu-logo">
            <!--<i class="fa fa-graduation-cap"></i>-->
            <img class="img-logo" src="~/Content/img/upmlogo.jpg" alt="imagen-raquetas-clases">
            <h1>U.P.M Cosmetics</h1>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
    <div id="wrapper">
        <div id="sidebar-wrapper" class="slidebar">
            <ul class="sidebar-nav">
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Inicio", "Index", "Home")</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Acerca de", "About", "Home")</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" && ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")">@Html.ActionLink("Contacto", "Contact", "Home")</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Articulo" ? "active" : "")">@Html.ActionLink("Ver productos", "Index", "Articulo")</li>
                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" && ViewContext.RouteData.Values["Controller"].ToString() == "Carrito" ? "active" : "")">@Html.ActionLink("Ver carrito", "Index", "Carrito")</li>
            </ul>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <footer class="footer">
            <div class="container">
                <div class="row text-center">
                    <hr>
                    <p class="text-muted">Universidad Politécnica de Madrid. &copy; @DateTime.Now.Year</p>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
